        <!--Autopilot-->
	<animation>
		<type>pick</type>
		<object-name>hdg.knob</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>controls/autoflight/heading-select</property>
				<wrap type="bool">true</wrap>
				<step type="double">1</step>
				<min>1</min>
				<max>361</max>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>controls/autoflight/heading-select</property>
				<wrap type="bool">true</wrap>
				<step type="double">-1</step>
				<min>1</min>
				<max>361</max>
			</binding>
		</action>
	</animation>
