<!-- Bombardier C-series -->
<!-- Flightdeck -->

<PropertyList>

	<path>flightdeck.ac</path>
        <model><path>overhead.xml</path></model>
	<panel-marking-emit>
		<red>1</red>
		<green>0.871</green>
		<blue>0.427</blue>
	</panel-marking-emit>
  <effect>
       <inherits-from>Effects/model-transparent</inherits-from>
         <object-name>hudL</object-name>
         <object-name>hudR</object-name>
     </effect> 

	<!-- Visible only within 1/2 km -->
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>500</max-m>
	</animation>
        <!--Throttle-->
	<animation>
		<type>rotate</type>
		<object-name>throttleL</object-name>
		<property>/controls/engines/engine/throttle</property>
                <condition><not>
                        <property>/controls/engines/engine/reverser</property></not>
                    </condition>
		<factor>-31</factor>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0.03501</x-m>
			<z-m>-0.25927</z-m>
		</center>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>throttleL</object-name>
		<property>/controls/engines/engine/throttle</property>
                <condition>
                        <property>/controls/engines/engine/reverser</property>
                    </condition>
		<factor>5.78</factor>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0.03501</x-m>
			<z-m>-0.25927</z-m>
		</center>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>throttleL</object-name>
		<property>/controls/engines/engine/reverser</property>
		<factor>3.9</factor>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0.03501</x-m>
			<z-m>-0.25927</z-m>
		</center>
	</animation>

