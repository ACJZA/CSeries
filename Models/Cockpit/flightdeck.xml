        <!--Spoiler-->

	<animation>
		<type>translate</type>
		<object-name>spoiler</object-name>
		<property>/controls/flight/speedbrake</property>
  <interpolation>
    <entry><ind> 0 </ind><dep> 0.0 </dep></entry>
    <entry><ind>  0.25 </ind><dep>   0.0128 </dep></entry>
    <entry><ind>  0.5 </ind><dep>   0.0347 </dep></entry>
    <entry><ind>  0.75 </ind><dep>   0.0566 </dep></entry>
    <entry><ind>  0.825 </ind><dep>   0.0724 </dep></entry>
    <entry><ind> 1 </ind><dep>   0.0859 </dep></entry>
  </interpolation>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
        <!--Flaps-->
	<animation>
		<type>rotate</type>
		<object-name>flaps</object-name>
		<property>/controls/flight/flaps</property>
		<factor>29.33</factor>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
		<center>
                    <x-m>0.36144</x-m>
			<z-m>-0.19271</z-m>
		</center>
	</animation>
        
        <!--Gear lever-->
	<animation>
		<type>pick</type>
		<object-name>gearhandle</object-name>
		<action>
			<button>0</button>
			<repeatable type="bool">false</repeatable>
			<binding>
				<command>property-toggle</command>
		<property>/controls/gear/gear-down</property>
			</binding>
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>gearhandle</object-name>
		<property>/controls/gear/gear-down</property>
		<factor>80</factor>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
		<center>
                    <x-m>-0.47199</x-m>
			<z-m>0.11003</z-m>
		</center>
	</animation>
        
        <!--Cutoff-->
	<animation>
		<type>pick</type>
		<object-name>engLcutoff</object-name>
		<action>
			<button>0</button>
			<repeatable type="bool">false</repeatable>
			<binding>
