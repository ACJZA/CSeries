<?xml version="1.0" encoding="UTF-8" ?>

<!-- Bombardier C-series -->
<!-- Overhead Panel -->

<PropertyList>

	<path>overhead.ac</path>

	<panel-marking-emit>
		<red>1</red>
		<green>0.871</green>
		<blue>0.427</blue>
	</panel-marking-emit>

	<!-- Visible only within 1/2 km -->
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>500</max-m>
	</animation>
        
        <!--Batteries-->
    
    <animation>
	<type>pick</type>
	<object-name>batt1</object-name>
	<action>
	    <button>0</button>
	    <repeatable type="bool">false</repeatable>
	    <binding>
		<command>property-toggle</command>
		<property>controls/electric/battery-switch</property>
	    </binding>
	</action>
    </animation>
    <animation>
	<type>pick</type>
	<object-name>batt2</object-name>
	<action>
	    <button>0</button>
	    <repeatable type="bool">false</repeatable>
	    <binding>
		<command>property-toggle</command>
		<property>controls/electric/battery-switch[1]</property>
	    </binding>
	</action>
    </animation>
    <!--Generators-->
    <animation>
	<type>pick</type>
	<object-name>lgen</object-name>
	<action>
	    <button>0</button>
	    <repeatable type="bool">false</repeatable>
	    <binding>
		<command>property-toggle</command>
		<property>controls/engines/engine/generator</property>
	    </binding>
	</action>
    </animation>
    <animation>
	<type>pick</type>
	<object-name>rgen</object-name>
	<action>
	    <button>0</button>
	    <repeatable type="bool">false</repeatable>
	    <binding>
		<command>property-toggle</command>
		<property>controls/engines/engine[1]/generator</property>
	    </binding>
	</action>
    </animation>
    <animation>
	<type>pick</type>
	<object-name>apu</object-name>
	<action>
	    <button>0</button>
	    <repeatable type="bool">false</repeatable>
	    <binding>
		<command>property-toggle</command>
		<property>controls/APU/electronic-control-unit</property>
	    </binding>
	    <binding>
		<command>property-toggle</command>
		<property>controls/APU/fuel-pump</property>
	    </binding>
	</action>
    </animation>
    <animation>
	<type>pick</type>
	<object-name>apustart</object-name>
	<action>
	    <button>0</button>
	    <repeatable type="bool">false</repeatable>
	    <binding>
		<command>property-toggle</command>
		<property>controls/APU/off-on</property>
	    </binding>
	</action>
    </animation>
    <animation>
	<type>pick</type>
	<object-name>apugen</object-name>
	<action>
	    <button>0</button>
	    <repeatable type="bool">false</repeatable>
	    <binding>
		<command>property-toggle</command>
		<property>controls/APU/generator</property>
	    </binding>
	</action>
    </animation>
    <animation>
	<type>pick</type>
        <object-name>extpwr</object-name>
	<action>
	    <button>0</button>
	    <repeatable type="bool">false</repeatable>
	    <binding>
		<command>property-toggle</command>
		<property>controls/electric/external-power</property>
	    </binding>
	</action>
    </animation>
    <!--Fuel-->
     <animation>
	<type>pick</type>
        <object-name>fuelpumpL</object-name>
	<action>
	    <button>0</button>
	    <repeatable type="bool">false</repeatable>
	    <binding>
		<command>property-toggle</command>
		<property>controls/engines/engine/fuel-pump</property>
	    </binding>
	</action>
    </animation>
     <animation>
	<type>pick</type>
        <object-name>fuelpumpR</object-name>
	<action>
	    <button>0</button>
	    <repeatable type="bool">false</repeatable>
	    <binding>
		<command>property-toggle</command>
		<property>controls/engines/engine[1]/fuel-pump</property>
	    </binding>
	</action>
    </animation>
    
</PropertyList>
