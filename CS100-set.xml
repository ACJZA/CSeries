<?xml version="1.0" encoding="UTF-8" ?>

<!-- Bombardier C-series -->
<!--CS100-->
<PropertyList>
    <sim>
        <description>Bombardier CS100</description>
        <author>ACJZA, Joshua Davidson, Jonathan Redpath, D-ECHO, Pakistan-1</author>
        <status>dev</status>
        <aircraft-version>0.1</aircraft-version>
		
        <flight-model>yasim</flight-model>
        <aero>CS100</aero>

        <model>
            <path>Aircraft/CSeries/Models/CS100.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
            <variant type="int">0</variant>
            <limits><!--according to https://en.wikipedia.org/wiki/Bombardier_CSeries#Specifications-->
				<mtow-lb>134000</mtow-lb>
				<mlw-lb>15550</mlw-lb>
			</limits>
		</model>
        
		<sound>
			<path>Aircraft/CSeries/Sounds/CSeries-sounds.xml</path>
		</sound>

        <dimensions>
            <radius-m type="float">35.1</radius-m>
        </dimensions>

        <weight n="0"><!--Crew weight-->
            <weight-lb>360</weight-lb>
            <max-lb>500</max-lb>
            <min-lb>0</min-lb>
        </weight>

        <weight n="1"><!--Passengers front weight-->
            <weight-lb>9000</weight-lb>
            <max-lb>10000</max-lb>
            <min-lb>0</min-lb>
        </weight>
        <weight n="2"><!--Passengers rear weight-->
            <weight-lb>9000</weight-lb>
            <max-lb>10000</max-lb>
            <min-lb>0</min-lb>
        </weight>
        <weight n="3"><!--Passengers rear weight-->
            <weight-lb>4000</weight-lb>
            <max-lb>8000</max-lb>
            <min-lb>0</min-lb>
        </weight>

        <menubar>
            <default>
                <menu n="100">
                    <label>Bombardier CSeries 100</label>
      <item>
        <label>Select Livery</label>
        <binding>
          <command>nasal</command>
          <script>aircraft.livery.dialog.toggle()</script>
        </binding>
      </item>
                </menu>
            </default>
        </menubar>

        <dimensions>
            <radius-m type="float">32.51</radius-m>
        </dimensions>
            
            <view n="0">
            <internal archive="y">true</internal>
            <config>
                <x-offset-m archive="y"> -0.5 </x-offset-m> <!-- Right -->
                <y-offset-m archive="y">  -1.52077 </y-offset-m> <!-- Up    -->
                <z-offset-m archive="y"> -14.44355 </z-offset-m> <!-- Back  -->
                <pitch-offset-deg> -10 </pitch-offset-deg>
                <default-field-of-view-deg> 94 </default-field-of-view-deg>
            </config>
            </view>
            <view n="101">
                <name>Copilot View</name>
            <internal archive="y">true</internal>
            <config>
                <x-offset-m archive="y"> 0.5 </x-offset-m> <!-- Right -->
                <y-offset-m archive="y">  -1.52077 </y-offset-m> <!-- Up    -->
                <z-offset-m archive="y"> -14.44355 </z-offset-m> <!-- Back  -->
                <pitch-offset-deg> -10 </pitch-offset-deg>
                <default-field-of-view-deg> 94 </default-field-of-view-deg>
            </config>
            </view>
    </sim>
    <controls>
        <cabin>
            <seating>0</seating> <!--Mixed Class-->
        </cabin>
    </controls>
            <input>
                <keyboard>
                    <key n="127">
                    <name>Delete</name>
                    <desc>Toggle thrust reversers or arm/disarm thrust reversers</desc>
                    <binding>
			<command>property-toggle</command>
                        <property>/controls/engines/engine/reverser</property>
                    </binding>
                    <binding>
			<command>property-toggle</command>
                        <property>/controls/engines/engine[1]/reverser</property>
                    </binding>
                    </key>
                </keyboard>
            </input>
    <nasal>
        <cseries>
            <file>Aircraft/CSeries/Nasal/doors.nas</file>
            <file>Aircraft/CSeries/Nasal/liveries.nas</file>
        </cseries>
    </nasal>
</PropertyList>
